%h1= t('header.main')
%h2= t('header.second')
%h2= @edition
= link_to t("signup.main"), new_user_registration_path
= link_to t("new_article.main"), new_article_path
= link_to t("sign_in.main"), new_user_session_path
= link_to t("log_out.main"), destroy_user_session_path, method: :delete
= link_to t("pay_with_card.main"), new_subscription_path
- if @local_articles
  %h3 Local Articles
  - @local_articles.each do |article|
    %p= link_to "#{article.title}", article_path(article)
    %p= sanitize(truncate(article.content, length: 150))

- if @articles
  %h3 All Articles
  - @articles.each do |article|
    %p= link_to "#{article.title}", article_path(article)
    %p= sanitize(truncate(article.content, length: 150))
